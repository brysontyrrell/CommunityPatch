{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
        "expires_in_days": {
            "$id": "#/properties/expires_in_days",
            "type": "integer",
            "minimum": 1,
            "maximum": 365,
            "default": 365,
            "examples": [
                365
            ]
        },
        "titles_in_scope": {
            "$id": "#/properties/titles_in_scope",
            "type": "array",
            "default": [],
            "items": {
                "$id": "#/properties/titles_in_scope/items",
                "type": "string",
                "minLength": 1,
                "examples": [
                    "<<Title ID>>"
                ]
            }
        }
    }
}